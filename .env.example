# ===========================================
# Railway Environment Variables Template
# Copy to .env for local development
# In Railway: Add these in Variables tab
# ===========================================

# === REQUIRED ===

# Telegram Bot (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Database (Railway provides this automatically for PostgreSQL addon)
DATABASE_URL=sqlite:///./app.db
# For Railway: DATABASE_URL=${{Postgres.DATABASE_URL}}

# GPX Storage (Telegram channel for storing GPX files)
GPX_CHANNEL_ID=-1001234567890

# Base URL (Railway domain after deploy)
BASE_URL=https://your-app.up.railway.app
WEB_APP_URL=https://your-app.up.railway.app

# === RECOMMENDED ===

# Admin notifications
ADMIN_CHAT_ID=your_telegram_user_id

# Production mode
DEBUG=false

# CORS (your Railway domain)
CORS_ORIGINS=["https://your-app.up.railway.app"]

# === OPTIONAL ===

# Server
PORT=8000

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_GLOBAL=200/minute
RATE_LIMIT_CREATE=10/minute
RATE_LIMIT_READ=100/minute

# Google Sheets Integration (if using)
# GOOGLE_SHEETS_CREDENTIALS={"type":"service_account",...}

# MongoDB (if using)
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/dbname
